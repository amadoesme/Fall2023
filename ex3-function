# Esmeralda Amado

import random

# I defined a function to roll a dice with a given number of sides
def dice(sides):
  return random.randint(1, sides)

# I made a function to roll a given number of dice with a given number of sides
def roll_dice(num_dice, num_sides):
  results = []
  for i in range(num_dice):
    results.append(dice(num_sides))
  return results

# I define a function to print the results of a rolling dice
def print_results(results):
 
  print("----------------------------------")

  for result in results:
    print(result, end=" ")

  print()
 
  print("----------------------------------")

# function to get the user input for the number of dice and sides
def get_user_input():
  while True:
    num_dice = input("Enter the number of dice to roll-> ")
    if num_dice.isnumeric() == False:
      print("Invalid input. Enter an integer.")
    else:
      num_dice = int(num_dice)
      break
  
  # Loop until valid input is entered
  while True:
    # I try to get the user input for the number of sides and convert it to an integer
      num_sides = input("Enter the number of sides the dice have-> ")
      if num_sides.isnumeric() == False:
        print("Invalid input. Enter an integer.")
      elif int(num_sides) not in [4, 6, 8, 10, 12, 20]:
        print("Invalid input. Enter one of these options: 4, 6, 8, 10, 12, or 20.")
      else:
        num_sides = int(num_sides)
        break
  
  return (num_dice, num_sides)

def main():
  # user input for the number of dice and sides using the get_user_input function
  num_dice, num_sides = get_user_input()
  
  # Loop until the user wants to quit
  while True:
    results = roll_dice(num_dice, num_sides)
    print_results(results)
    
    # I get user input for what to do next and convert it to lowercase
    choice = input("Press Enter to re-roll, q to quit, or n to set new parameters-> ").lower()
    
    # Check if the user wants to quit by entering 'q', 'quit', or 'exit'
    if choice in ['q', 'quit', 'exit']:
      print("Thank you for playing!")
      break
    
    # Check if the user wants to set new parameters by entering 'n' or 'new'
    elif choice in ['n', 'new']:
      num_dice, num_sides = get_user_input()
    
# Call the main function to start the program
main()
